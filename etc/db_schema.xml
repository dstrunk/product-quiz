<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="silentpost_productquiz_questions" resource="default" engine="innodb" comment="">
        <column xsi:type="int" name="question_id" padding="11" unsigned="false" nullable="false" identity="true"/>
        <column xsi:type="text" name="title" nullable="false"/>
        <column xsi:type="text" name="description" nullable="true"/>
        <column xsi:type="int" name="is_active" unsigned="true" nullable="false" identity="false" default="0"/>
        <column xsi:type="datetime" name="created_at" nullable="false" on_update="true" default="CURRENT_TIMESTAMP"/>
        <column xsi:type="datetime" name="updated_at" nullable="false" on_update="true" default="CURRENT_TIMESTAMP"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="question_id"/>
        </constraint>
        <index referenceId="SILENTPOST_PRODUCTQUIZ_QUESTIONS_QUESTION_ID" indexType="btree">
            <column name="question_id"/>
        </index>
    </table>
    <table name="silentpost_productquiz_answers" resource="default" engine="innodb" comment="">
        <column xsi:type="int" name="answer_id" padding="11" unsigned="false" nullable="false" identity="true"/>
        <column xsi:type="int" name="question_id" padding="11" unsigned="false" nullable="false" identity="false"/>
        <column xsi:type="text" name="title" nullable="false"/>
        <column xsi:type="text" name="description" nullable="false"/>
        <column xsi:type="datetime" name="created_at" nullable="false" on_update="true" default="CURRENT_TIMESTAMP"/>
        <column xsi:type="datetime" name="updated_at" nullable="false" on_update="true" default="CURRENT_TIMESTAMP"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="answer_id"/>
        </constraint>
        <index referenceId="SILENTPOST_PRODUCTQUIZ_ANSWERS_ANSWER_ID" indexType="btree">
            <column name="answer_id"/>
        </index>
    </table>
    <table name="silentpost_productquiz_recommendations" resource="default" engine="innodb" comment="">
        <column xsi:type="int" name="recommendation_id" padding="11" unsigned="false" nullable="false" identity="true"/>
        <column xsi:type="text" name="question_ids" nullable="false" comment="Comma-separated answer IDs"/>
        <column xsi:type="text" name="product_ids" nullable="false" comment="Comma-separated question IDs"/>
        <column xsi:type="datetime" name="created_at" nullable="false" on_update="true" default="CURRENT_TIMESTAMP"/>
        <column xsi:type="datetime" name="updated_at" nullable="false" on_update="true" default="CURRENT_TIMESTAMP"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="recommendation_id"/>
        </constraint>
        <index referenceId="SILENTPOST_PRODUCTQUIZ_RECOMMENDATIONS_RECOMMENDATION_ID" indexType="btree">
            <column name="recommendation_id"/>
        </index>
    </table>
</schema>
